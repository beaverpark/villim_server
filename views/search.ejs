    <div class="row">
      <form action="/search" method="post">
        <div class="input-field col s6">
          <input placeholder="어디로 가세요?" name="location" type="text" class="validate" value="<%= location %>" required>
        </div>
        <div class="input-field col s2">
          <input placeholder="시작일" name="from_date" type="text" class="validate" value="<%= from_date %>" required>
        </div>
        <div class="input-field col s2">
          <input placeholder="종료일" name="to_date" type="text" class="validate" value="<%= to_date %>" required>
        </div>
        <div class="col s2" style="position: relative; margin-top: 1.5rem"> 
          <button class="btn waves-effect waves-light red accent-2" type="submit" name="action">검색</button>
        </div>
      </form>
    </div>


    <div class="container search_container">
      <div class="row">
        <div class="col s12 m6 l7">
          <div class="row">
            
            <% if(house_name) { %>
              <% for (var i=0; i<house_name.length; i++) { %>
                <div class="col s12 m12 l6"> 
                  <a href="#">
                    <div class="card search_card">
                      <div class="card-image">
                        <img src="/images/index_room.jpeg">
                        <a class="btn-floating top_right_fab waves-effect waves-light white">
                          <img src="/images/icons/icon_heart.png" height="28px" style="width:70%; top:8px; left:6px">
                        </a>
                      </div>
                      <div class="card-content search_card_content">
                        <div class="search_card_rate text_thick"> &#8361; <%- house_monthly_rate[i].monthly_rate -%> / 1개월 </div>
                        <div class="search_card_name"> <%- house_name[i].name -%> </div>
                        <div class="search_card_addr"> -주소- <%- house_addr_summary[i].addr_summary -%> </div>
                        <div class="search_card_rating">
                          -별점- <%- house_avg_rating[i].avg_rating -%> 
                        </div>                   
                      </div>       
                    </div>
                  </a>
                </div>
              <% } } %>




